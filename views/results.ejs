<%- include('./partials/header') %>

<h1>Search Results</h1> <a href="/users/:id">My Favorites</a>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <% if (doc.petfinder.pets === undefined) { %>
                <h1>Sorry, we couldnt find any friends near here, try a different area!</h1>
            <% } else { %>
                <% doc.petfinder.pets.pet.forEach(function(pet) {%>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 centered">
                    <h2><%=pet.name.$t%></h2>
                    <% if (pet.media.photos === undefined || pet.media === undefined) { %>
                    <p>Sorry, no photos available for this baby yet!</p>
                    <% } else { %>
                    <a href="/pets/<%=pet.id.$t%>"><img src="<%=pet.media.photos.photo[2].$t%>" class="photo-resize round"></a>       
                    <% }; %>
                    <p class="centered"><%=pet.contact.city.$t%>|<%=pet.contact.state.$t%>| <%=pet.contact.zip.$t%></p>
                    <p><%=pet.age.$t%>
                    <%=pet.size.$t%>
                    <%=pet.sex.$t%>
                    <%=pet.id.$t%>
                    <%=pet.shelterPetId.$t%></p>
                    <button class="heart-button"><span id="<%=pet.id.$t%>" class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>
                </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<script src="/javascripts/results.js"></script>

<%- include('./partials/footer') %>

